# Keep these folders out of source archives
.github export-ignore
tests  export-ignore
venv   export-ignore
lists  export-ignore

# Normalize text; Git stores as LF, checks out as OS default
* text=auto

# Force CRLF for Windows/VS project files
*.sln      text eol=crlf
*.csproj   text eol=crlf
*.props    text eol=crlf
*.targets  text eol=crlf
*.cs       text eol=crlf
*.xaml     text eol=crlf
*.json     text eol=crlf
*.config   text eol=crlf
*.cmd      text eol=crlf
*.bat      text eol=crlf
*.ps1      text eol=crlf

# Binary files: never touch line endings
*.png   -text
*.jpg   -text
*.jpeg  -text
*.gif   -text
*.ico   -text
*.zip   -text
*.7z    -text
*.pdf   -text
*.dll   -text
*.exe   -text
